@model Info
@{
    ViewData["Title"] = "Изменить информацию " + Model.Page;
}
<form asp-action="EditInformation" enctype="multipart/form-data">
    <input type="hidden" asp-for="id" />
    <div class="form-group">
        <label class="control-label">Название</label>
        <input asp-for="Information" class="form-control" />
        <span asp-validation-for="Information" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>
