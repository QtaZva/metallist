@model MediaFileViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Добавить медиафайл";
}
<form asp-action="CreateMediaFile" enctype="multipart/form-data">
    <div class="form-group">
        <label class="control-label">Название</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Картинка</label>
        <input asp-for="File" type="file" class="form-control" />
    </div>

    <div class="form-group">
        <label class="control-label">Страница</label>
        <select asp-for="page_id" class="form-control" asp-items="Model.Pages">
            <option value="">Выберите страницу</option>
        </select>
        <span asp-validation-for="page_id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Добавить</button>
    </div>
</form>