@model ProductViewModel
@{
    ViewData["Title"] = "Добавление товара";
}
<h2>Добавление продукта</h2>
<form asp-action="CreateProduct" enctype="multipart/form-data">
    <div class="form-group">
        <label class="control-label">Название</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Описание</label>
        <input asp-for="Desc" class="form-control" />
        <span asp-validation-for="Desc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Артикул</label>
        <input asp-for="Vendor" class="form-control" />
        <span asp-validation-for="Vendor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Размер</label>
        <input asp-for="Size" class="form-control" />
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Цена</label>
        <input asp-for="Cost" type="number" class="form-control" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Картинка</label>
        <input asp-for="Img" type="file" class="form-control"/>
    </div>

    <div class="form-group">
        <label class="control-label">Категория</label>
        <select asp-for="Category_id" class="form-control" asp-items="Model.Categories">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="Category_id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Добавить</button>
    </div>
</form>
