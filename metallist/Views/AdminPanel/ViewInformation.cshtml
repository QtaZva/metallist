@model IEnumerable<Info>;
@{
    ViewData["Title"] = "Информация на страницах";
}
<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>
    <table class="table table-hover table-striped table-bordered shadow-sm rounded-3">
        <thead class="table-dark">
            <tr>
                <th scope="col">Название страницы</th>
                <th scope="col">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">@item.Page</td>
                    <td class="align-middle">
                        <a href="@Url.Action("EditInformation", "AdminPanel", new { id = item.id })" class="btn btn-primary btn-sm">Редактировать информацию</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
