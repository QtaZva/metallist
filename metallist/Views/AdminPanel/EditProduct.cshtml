@model EditProductViewModel

@{
    ViewData["Title"] = "Изменение товара";
}

<h2>Изменение продукта</h2>

<form asp-action="EditProduct" enctype="multipart/form-data">
    <input type="hidden" asp-for="Product.id" />

    <div class="form-group">
        <label class="control-label">Название</label>
        <input asp-for="Product.Name" class="form-control" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Описание</label>
        <input asp-for="Product.Desc" class="form-control" />
        <span asp-validation-for="Product.Desc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Артикул</label>
        <input asp-for="Product.Vendor" class="form-control" />
        <span asp-validation-for="Product.Vendor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Размер</label>
        <input asp-for="Product.Size" class="form-control" />
        <span asp-validation-for="Product.Size" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Цена</label>
        <input asp-for="Product.Cost" type="number" class="form-control" />
        <span asp-validation-for="Product.Cost" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Картинка</label>
        <input asp-for="Img" type="file" class="form-control" />
    </div>

    <div class="form-group">
        <label class="control-label">Категория</label>
        <select asp-for="Product.Category_id" class="form-control" asp-items="Model.Categories">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="Product.Category_id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>
